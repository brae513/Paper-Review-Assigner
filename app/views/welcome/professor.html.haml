%html
  %head
    :css
        ul
        {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }
        
        li.navBar
        {
            float: left;
        }
        
        li.navBarActive
        {
            float: left;
            background-color: #8d42f5;
        }
        
        li a
        {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
        
        li a:hover:not(.active)
        {
            background-color: #4287f5;
        }
        
        button {
          width: 100%;
          height: 40px;
          display: block;
          margin: 10px;
        }
    
        #add-paper {
          text-align: center;
          position: center;
        }
        
        #form_id {
          text-align: center;
        }
        
        .right-col {
        
        }
        
  %body
    %ul
      %li.navBar
        = link_to "Home", index_path

      %li.navBar{:style => "float:right"}
        = link_to "Student Access", student_path
        
      %li.navBarActive{:style => "float:right"}
        = link_to "Professor Access", {:style=>'color:#FFFFFF;', :class => "css_class"}
    
    %div.container-fluid
      %div.row
        %h1.col.text-center.font-weight-bold Professor Access
      %div.row
        
        // Left column of page
        %div.col.left
        
          %table#papers.table.table-striped.col-md-12
            %thead
              %tr
                %th Paper Title
                %th More Info
            %tbody
              // - @papers.each do |paper|
              //   %tr
              //     %td= paper.title
        
        // Right column of page 
        %div.col.right-col
          %div.col-lg-12
            %button.btn.btn-primary.btn-large.btn-block Assign Papers
          %div.col-lg-12
            %button.btn.btn-primary.btn-large.btn-block Alert Students
          %div.col-lg-12
            %h2#add-paper Add Paper
            = form_tag professor_path, id: "form_id" do
              = label :title, 'Title'
              = text_field :title, 'title'
              = submit_tag 'Submit'