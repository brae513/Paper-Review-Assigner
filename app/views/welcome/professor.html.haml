%html
  %head
    :css
        ul
        {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }
        
        li.navBar
        {
            float: left;
        }
        
        li.navBarActive
        {
            float: left;
            background-color: #8d42f5;
        }
        
        li.navBar a
        {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
        
        li.navBar a:hover:not(.active)
        {
            background-color: #4287f5;
        }

        li.navBarActive a
        {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
        
        li.navBarActive a:hover:not(.active)
        {
            background-color: #4287f5;
        }    

        li.loginlink
        {
            display: block;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
        
  %body
    %ul
      %li.navBar
        = link_to "Home", index_path

      %li.navBar{:style => "float:right"}
        = link_to "Student Access", student_path
        
      %li.navBarActive{:style => "float:right"}
        = link_to "Professor Access", {:style=>'color:#FFFFFF;', :class => "css_class"}
        
    %ul
      %li.loginlink
        = link_to "Register", new_user_registration_path
      %li.loginlink
        = link_to "Log In", new_user_session_path
