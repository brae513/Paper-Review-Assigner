%html
  %head
    :css
        ul
        {
          list-style-type: none;
          margin: 0;
          padding: 0;
          overflow: hidden;
          background-color: #333;
        }
        
        li.navBar
        {
          float: left;
        }
        
        li.navBarActive
        {
          float: left;
          background-color: #8d42f5;
        }
        
        li.navBar a
        {
          display: block;
          color: white;
          text-align: center;
          padding: 14px 16px;
          text-decoration: none;
        }
        
        li.navBar a:hover:not(.active)
        {
          background-color: #4287f5;
        }

        li.navBarActive a
        {
          display: block;
          color: white;
          text-align: center;
          padding: 14px 16px;
          text-decoration: none;
        }
        
        li.navBarActive a:hover:not(.active)
        {
          background-color: #4287f5;
        }    

        li.linkToProfessorItems
        {
          display: block;
          text-align: center;
          padding: 14px 16px;
          text-decoration: none;
        }
        
        button {
          width: 100%;
          height: 40px;
          display: block;
          margin: 10px;
        }
    
        #add-paper {
          text-align: center;
          position: center;
        }
        
        #form_id {
          text-align: center;
        }

  %body
    %ul
      .navBar
      %li.navBar
        = link_to "Home", index_path
      %li.navBar
        = link_to "Papers", professor_path
      %li.navBar
        = link_to "Students", students_path

      %li.navBar{:style => "float:right"}
        = link_to "Log Out", destroy_user_session_path, :method => :delete

    // Page content container
    %div.container-fluid
      %div.row
        %h1.col.text-center.font-weight-bold Professor Access
      %div.row
      
        // Left column of page
        %div.col.left
          %h2.text-center Papers
          - if !@papers.nil?
            %table#papers.table.table-striped.col-md-12
              %thead
                %tr
                  %th Paper Title
                  %th More Info
              %tbody  
              - @papers.each do |paper|
                %tr
                  %td= paper.title
          - else
            %h3 No papers added yet.
              
        // Right column of page 
        %div.col.right-col
          %div.col-lg-12
            %h2#add-paper Add Paper
            = form_tag professor_path, id: "form_id" do
              .form-group
                = label :title, 'Title'
                = text_field :title, 'title'
                = submit_tag 'Submit'  
          %div.col-lg-12
            %button.btn.btn-primary.btn-large.btn-block Alert Students
          %div.col-lg-12
            %button.btn.btn-primary.btn-large.btn-block Assign Papers