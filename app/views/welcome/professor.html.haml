%html
  %head
    :css
        ul
        {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }
        
        li.navBar
        {
            float: left;
        }
        
        li.navBarActive
        {
            float: left;
            background-color: #8d42f5;
        }
        
        li.navBar a
        {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
        
        li.navBar a:hover:not(.active)
        {
            background-color: #4287f5;
        }

        li.navBarActive a
        {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
        
        li.navBarActive a:hover:not(.active)
        {
            background-color: #4287f5;
        }    

        li.linkToProfessorItems
        {
            display: block;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
        
  %body
    %ul
      %li.navBar
        = link_to "Home", index_path
        
      %li.navBar{:style => "float:right"}
        = link_to "Log Out", destroy_user_session_path, :method => :delete
     
     
    %ul 
      %li.linkToProfessorItems
        = link_to "Papers Table", professor_path
      %li.linkToProfessorItems
        = link_to "Students Table", students_path
        

    .nav-collapse.collapse
      %ul.nav
        %li.active
          %a{:href => "#"} Home
        %li.dropdown
          %a.dropdown-toggle{:href => "#", "role" => "button", "data-toggle" => "dropdown", "data-target" => "#"} 
            The dropdown item
            %b.caret
          %ul.dropdown-menu{"role" => "menu"}
            %li
              %a{:href => "#link1"} 
                Dropdown #1
              %a{:href => "#link2"} 
                Dropdown #2
              %a{:href => "#link3"} 
                Dropdown #3
              %a{:href => "#link4"} 
                Dropdown #4
        %li
          %a{:href => "#contact"} Contact