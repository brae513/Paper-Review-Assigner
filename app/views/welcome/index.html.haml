%html
  %head
    :css
        ul
        {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }
        
        li.navBar
        {
            float: left;
        }
        
        li.navBarActive
        {
            float: left;
            background-color: #8d42f5;
        }
        
        li a
        {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
        
        li a:hover:not(.active)
        {
            background-color: #4287f5;
        }
      
        
  %body
    %ul
      %li.navBarActive
        = link_to "Home", {:style=>'color:#FFFFFF;', :class => "css_class"}
      
      - if signed_in?
        .dropdown
        %button.dropbtn
          Menu
          %i.fa.fa-caret-down
        .dropdown-content
          %li.navBar
            = link_to "Papers Table", professor_path
          %li.navBar
            = link_to "Students Table", students_path
            
        %li.navBar{:style => "float:right"}
          = link_to "Log Out", destroy_user_session_path, :method => :delete
          
      - else
        %li.navBar{:style => "float:right"}
          = link_to "Register", new_user_registration_path
        %li.navBar{:style => "float:right"}
          = link_to "Log In", new_user_session_path
        
  
    %h1 Welcome to Peer Review Assigner
    %h2 How to use our site:
    %ol
      %li Select Student Access or Professor Access from the top right corner
      %li Enter your credentials
      %li Done!