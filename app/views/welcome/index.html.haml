%html
  %head
    :css
        ul
        {
          list-style-type: none;
          margin: 0;
          padding: 0;
          overflow: hidden;
          background-color: #333;
        }
        
        li.navBar
        {
          float: left;
        }
        
        li.navBarActive
        {
          float: left;
          background-color: #8d42f5;
        }
        
        li.navBar a
        {
          display: block;
          color: white;
          text-align: center;
          padding: 14px 16px;
          text-decoration: none;
        }
        
        li.navBar a:hover:not(.active)
        {
          background-color: #4287f5;
        }

        li.navBarActive a
        {
          display: block;
          color: white;
          text-align: center;
          padding: 14px 16px;
          text-decoration: none;
        }
        
        li.navBarActive a:hover:not(.active)
        {
          background-color: #4287f5;
        }    

        li.linkToProfessorItems
        {
          display: block;
          text-align: center;
          padding: 14px 16px;
          text-decoration: none;
        }
        
        .dropdown
        {
          float: left;
          overflow: hidden;
        }
        .dropdown .dropbtn 
        {
          border: none;
          outline: none;
          color: green;
          text-align: center;
          padding: 14px 16px;
          text-decoration: none;
        }
        .dropdown-content 
        {
          display: none;
          position: absolute;
          background-color: green;
          min-width: 160px;
          box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
          z-index: 1;
        }
        .dropdown-content a 
        {
          float: none;
          color: black;
          padding: 12px 16px;
          text-decoration: none;
          display: block;
          text-align: left;
        }
        .dropdown-content a:hover 
        {
          background-color: #ddd;
        }
        .dropdown:hover .dropdown-content 
        {
          display: block;
        }
        
        .landing-text {
          text-align: center;
        }
        
        .center-list {
          display: inline-block;
          margin-left: auto;
          margin-right: auto;
          text-align:left;
          text-size
        }        
      
  %body
    %ul
      %li.navBarActive
        = link_to "Home", {:style=>'color:#FFFFFF;', :class => "css_class"}
      
      - if signed_in?
        .dropdown
          %button.dropbtn
            Menu
            %i.fa.fa-caret-down
            .dropdown-content
              %li.navBar
                = link_to "Papers Table", professor_path
              %li.navBar
                = link_to "Students Table", students_path
            
        %li.navBar{:style => "float:right"}
          = link_to "Log Out", destroy_user_session_path, :method => :delete
          
      - else
        %li.navBar{:style => "float:right"}
          = link_to "Register", new_user_registration_path
        %li.navBar{:style => "float:right"}
          = link_to "Log In", new_user_session_path
        
  
  %div.landing-text
    %h1.font-weight-bold Welcome to Peer Review Assigner
    %h2 How to use our site:
    %div.center-list
      %ol
        %li Select Student Access or Professor Access from the top right corner
        %li Enter your credentials
        %li Done!